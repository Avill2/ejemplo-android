<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="172dp"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:text="Seleccionario Usuario"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="85dp" />

    <Spinner
        android:id="@+id/spinner_Usuario"
        android:layout_width="172dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="257dp"
        android:layout_height="318dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="165dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="293dp">

            <RelativeLayout
                android:layout_width="201dp"
                android:layout_height="230dp">

                <TextView
                    android:id="@+id/textView_pellido_Grande"
                    android:layout_width="80dp"
                    android:layout_height="36dp"
                    android:layout_alignEnd="@+id/textView_nombre"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="25dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView_Apellido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView_pellido_Grande"
                    android:layout_marginTop="92dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="61dp"
                    android:layout_marginStart="43dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="27dp"
                    android:layout_marginStart="30dp"
                    android:text="TextView" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>